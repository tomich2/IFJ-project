{ Test funkce lenght }
var
	str: string;
	len: integer;
	a: integer;

begin
	str:='';
	len:= length(str);
	write(len,''#10'');

	str:='ahoj';
	len:= length(str);
	write(len,''#10'');

	str:=''#10'';
	len:= length(str);
	write(len,''#10'');

	a:=255;
	str:='';
	while a > 0 do
	begin
		str := str + 'a';
		a := a -1
	end;
	len:= length(str);
	write(len,''#10'');

	a:=256;
	str:='';
	while a > 0 do
	begin
		str := str + 'a';
		a := a -1
	end;
	len:= length(str);
	write(len,''#10'')
end.
